<Window x:Class="CSharpTrainer.ModulePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Модуль"
        Height="600"
        Width="800"
        Background="{StaticResource PrimaryBackgroundColor}"
        Foreground="{StaticResource PrimaryTextColor}"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Список задач -->
        <ListBox x:Name="TaskList" 
                 DisplayMemberPath="TaskDescription" 
                 SelectionChanged="TaskList_SelectionChanged"
                 Background="{StaticResource SecondaryBackgroundColor}"
                 Foreground="{StaticResource PrimaryTextColor}"/>

        <!-- Панель с задачей -->
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock x:Name="TitleBlock"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentColor}"
                       Margin="0,0,0,15"/>

            <ProgressBar x:Name="ModuleProgressBar"
                         Height="20"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Background="{StaticResource SecondaryBackgroundColor}"
                         Foreground="{StaticResource AccentColor}"
                         Margin="0,0,0,20"/>

            <TextBlock x:Name="DescriptionBlock"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource SecondaryTextColor}"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Задание:"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,5"/>

            <Border Background="{StaticResource SecondaryBackgroundColor}"
                    CornerRadius="5"
                    Padding="10"
                    Margin="0,0,0,10">
                <TextBlock x:Name="TaskBlock"
                           FontSize="14"
                           TextWrapping="Wrap"/>
            </Border>

            <TextBox x:Name="AnswerBox"
                     Height="100"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,0,0,15"/>

            <Button x:Name="StartTaskButton" 
                    Content="Проверить" 
                    Style="{StaticResource AccentButtonStyle}"
                    Click="StartTaskButton_Click"
                    Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>