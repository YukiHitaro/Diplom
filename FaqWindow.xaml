<Window x:Class="CSharpTrainer.FaqWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpTrainer"
        mc:Ignorable="d"
        Title="Справка и Руководство" Height="280" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PrimaryBackgroundColor}"
        Foreground="{StaticResource PrimaryTextColor}"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Справочная информация" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,25" 
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource AccentColor}"/>

            <Button x:Name="OpenFaqPdfButton"
                    Content="Открыть F.A.Q."
                    Style="{StaticResource AccentButtonStyle}"
                    Width="280"
                    Height="45"
                    Margin="0,10"
                    Click="OpenFaqPdfButton_Click"/>

            <Button x:Name="OpenManualPdfButton"
                    Content="Открыть Руководство оператора"
                    Style="{StaticResource AccentButtonStyle}"
                    Width="280"
                    Height="45"
                    Margin="0,10"
                    Click="OpenManualPdfButton_Click"/>
        </StackPanel>
    </Grid>
</Window>